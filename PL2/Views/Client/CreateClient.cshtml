@model PL.Models.Client
@{
    ViewData["Title"] = "Client creating";
    Layout = "_Layout";
}
<form asp-action="CreateClient" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <div><span asp-validation-for="Title" class="text-danger"></span></div>
        <input asp-for="Title" class="form-control" maxlength="50" required/>
    </div>

    <div class="form-group">
        <label>Contact information</label>
        <div><span asp-validation-for="ContactInformation" class="text-danger"></span></div>
        <input asp-for="ContactInformation" class="form-control" maxlength="100" required/>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="EditClientList" class="btn btn-secondary">Cancel</a>
    </div>
</form>