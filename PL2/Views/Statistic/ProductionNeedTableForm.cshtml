@model PL.Models.ModelsForView.TimeInterval
@{
    Layout = "_Layout";
}
<div asp-validation-summary="All"></div>
    <div id="10" style="width:100%;" class="text-center">
        <h2>Information about consumer needs</h2>
    </div>
    <div>
        <div class="table text-center">
            <h3>Components</h3>
            <table class="table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th class="text-center col-5">
                            <a asp-action="ProductionNeedTableForm"
                               asp-route-componentSort="@ViewBag.CompTitleS"
                               asp-route-serviceSort="@ViewBag.ServieSortValue"
                               asp-route-interval="@Model">Component</a>
                        </th>
                        <th class="text-center col-5">
                            <a asp-action="ProductionNeedTableForm"
                               asp-route-componentSort="@ViewBag.CompStandS"
                               asp-route-serviceSort="@ViewBag.ServieSortValue"
                               asp-route-interval="@Model">
                                Production standart
                            </a>
                        </th>
                        <th class="text-center col-2">
                            <a asp-action="ProductionNeedTableForm"
                               asp-route-componentSort="@ViewBag.CompQauntS"
                               asp-route-serviceSort="@ViewBag.ServieSortValue"
                               asp-route-interval="@Model">
                                Quantity
                            </a>
                        </th>
                    </tr>
                </thead>
                @for (int i = 0; i < ViewBag.Length; i++)
                {
                    <tr>
                        <td class="text-center col-5">
                            @ViewBag.CT[i]
                        </td>
                        <td class="text-center col-5">
                            @ViewBag.CP[i]
                        </td>
                        <td class="text-center col-2">
                            @ViewBag.CC[i]
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="table text-center">
            <h3>Servises</h3>
            <table class="table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th class="text-center col-5">
                            <a asp-action="ProductionNeedTableForm"
                            asp-route-componentSort="@ViewBag.ComponentSortValue"
                            asp-route-serviceSort="@ViewBag.ServiceTitleS"
                            asp-route-interval="@Model">Service</a>
                        </th>
                        <th class="text-center col-5">
                            <a asp-action="ProductionNeedTableForm"
                               asp-route-componentSort="@ViewBag.ComponentSortValue"
                               asp-route-serviceSort="@ViewBag.ServiceQauntS"
                               asp-route-interval="@Model">Quantity</a></th>
                    </tr>
                </thead>
                @for (int i = 0; i < ViewBag.ServiceLen; i++)
                {
                    <tr>
                        <td class="text-center col-5">
                            @ViewBag.ST[i]
                        </td>
                        <td class="text-center col-5">
                            @ViewBag.SC[i]
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div>
        
    </div>
<div class="container text-center" style="margin-top:10px">
    <form asp-action="ProductionNeedTableForm">
        <input type="hidden" name="componentSort" value="@ViewBag.ComponentSortValue" />
        <input type="hidden" name="serviceSort" value="@ViewBag.ServieSortValue" />
        <div asp-validation-summary="All"></div>
        <div class="form-group mx-auto">
            <label asp-for="From"></label>
            <input type="date" asp-for="From" />
        </div>
        <div class="form-group mx-auto">
            <label asp-for="To"></label>
            <input type="date" asp-for="To" />
        </div>
        <button type="submit" class="btn btn-primary col-md-5">
            Apply a filter
        </button>
        <button type="submit" class="btn btn-primary col-md-5" asp-action="StartMenu" asp-controller="Director">
            Go back
        </button>
    </form>
</div>