@model List<BuildStandart>
@{
    ViewData["Title"] = "Services list";
    Layout = "_MasterLayout";
}
<div class="text-danger" asp-validation-summary="All"></div>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Operation name</th>
        <th class="text-center">Component</th>
        <th class="text-center">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">@item.Service.Title</td>
            <td class="text-center">@String.Format("{0}: {1}",item.Componet.Title, item.Componet.ProductionStandards)</td>
            <td class="text-center">@((item.Service.Price + item.Componet.Price).ToString())</td>
            <td class="text-center">
                <form asp-action="DeleteBuildStandards" method="post">
                    <input type="hidden" name="builderStandartId" value="@item.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateBuildStandards" class="btn btn-primary">
        Add new build standart combination
    </a>
</div>
@if (Model.Count < 10)
{
    int len = 10 - Model.Count();
    for (int i = 0; i < len; i++)
    {
        <div style="height:42px">
        </div>
    }
}
