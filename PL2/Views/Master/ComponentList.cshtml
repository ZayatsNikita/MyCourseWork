@model List<Componet>
@{
    ViewData["Title"] = "Services list";
    Layout = "_MasterLayout";
}
<div class="text-danger" asp-validation-summary="All"></div>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Title</th>
        <th class="text-center">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">@String.Format("{0}: {1}", item.Title, item.ProductionStandards)</td>
            <td class="text-center">@item.Price</td>
            <td class="text-center">
                <form asp-action="DeleteComponent" method="post">
                    <a asp-action="EditComponent" class="btn btn-sm btn-warning"
                       asp-route-componentId="@item.Id">
                        Edit
                    </a>
                    <input type="hidden" name="componentId" value="@item.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="text-center mb-2">
    <a asp-action="CreateComponent" class="btn btn-primary">
        Add new component
    </a>
</div>
@if (Model.Count < 10)
{
    int len = 10 - Model.Count();
    for (int i = 0; i < len; i++)
    {
        <div style="height:42px">
        </div>
    }
}