@model PL.Models.BuildStandart
@{
    ViewData["Title"] = "Creating of new standart";
    Layout = "_Layout";
}
<form asp-action="CreateBuildStandards" method="post">
    <div class="form-group">
        <label asp-for="Service.Title"></label>
        <select asp-for="Service.Id" asp-items="@(new SelectList(ViewBag.Services,"Id","Title"))"></select>
    </div>

    <div class="form-group">
        <label asp-for="Componet.Title"></label>
        <select asp-for="Componet.Id" asp-items="@(new SelectList(ViewBag.Components,"Id","Title"))"></select>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="BuildStandardsList" class="btn btn-secondary">Cancel</a>
    </div>
</form>