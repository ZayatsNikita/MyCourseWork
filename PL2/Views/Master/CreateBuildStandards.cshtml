@model PL.Models.BuildStandart
@{
    ViewData["Title"] = "Creating of new standart";
    Layout = "_Layout";
}
<form asp-action="CreateBuildStandards" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Service:</label>
        <div class="col-sm-10">
            <select asp-for="Service.Id" asp-items="@(new SelectList(ViewBag.Services,"Id","Title"))" class="form-control" id="staticEmail"></select>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Component:</label>
        <div class="col-sm-10">
            <select asp-for="Componet.Id" asp-items="@(new SelectList(ViewBag.Components,"Id","Title"))" class="form-control"></select>
        </div>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="BuildStandardsList" class="btn btn-secondary">Cancel</a>
    </div>
</form>