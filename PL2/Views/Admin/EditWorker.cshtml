@model PL.Models.ModelsForView.FullUserThatAllowsChanges
@{
    ViewData["Title"] = "Edit worker";
    Layout = "_Layout";
}
<form asp-action="EditWorker" asp-controller="Admin" method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="WorkerId" />
    <div class="form-group">
        <label>Worker FIO:</label>
        <div><span asp-validation-for="WorkerFio" class="text-danger"></span></div>
        <input asp-for="WorkerFio" class="form-control" />
    </div>

    <input type="hidden" asp-for="UserId">

    <div class="form-group">
        <label asp-for="Login"></label>
        <div><span asp-validation-for="Login" class="text-danger"></span></div>
        <input asp-for="Login" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <div><span asp-validation-for="Login" class="text-danger"></span></div>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label>There is an account</label>
        <input type="radio" name="HasAnAccount" value="True" asp-for="HasAnAccount" /><br />
        <label>The employee is not allowed to have an account</label>
        <input type="radio" name="HasAnAccount" value="False" asp-for="HasAnAccount" />
    </div>

    <ul>
        @for (int i = 0; i < Model.ExistingRoles.Count; i++)
        {
            <li>
                <label>@Model.ExistingRoles[i].Title</label>
                <input type="checkbox" asp-for="ActivatedRoles[i]" />
            </li>
        }
    </ul>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="EditWorkersInformation" class="btn btn-secondary">Cancel</a>
    </div>
</form>
