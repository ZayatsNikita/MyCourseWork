@model PL.Models.ModelsForView.FullUser
@{
    ViewData["Title"] = "Log in";
    Layout = "_AcountLayout";
}
<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="StartRoleChoosing" asp-controller="Acount" method="post" style="margin-top: 230px;">
    <div class="text-center">
        @if (ViewBag.Mes != null)
        {
            <p style="color:red;"><strong>@ViewBag.Mes</strong></p>
        }
    </div>
    <div class="mx-auto" style="width: 40%">
            <div class="form-group row" >
                <label for="inputEmail3" class="col-sm-2 col-form-label">Login:</label>
                <div class="col-sm-6">
                    <input type="text" name="login" maxlength="30" required class="form-control" id="inputEmail3">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password:</label>
                <div class="col-sm-6">
                    <input type="password" name="password" required maxlength="30" class="form-control" id="inputPassword3">
                </div>
            </div>
        <div class="mx-auto" style="width: 80%">
            <button class="btn btn-primary col-7" type="submit">Log in</button>
        </div>
    </div>
</form>