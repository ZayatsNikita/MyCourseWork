@model PL.Models.ModelsForView.FullUser
@{
    ViewData["Title"] = "Log in";
    Layout = "_AcountLayout";
}
<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="StartRoleChoosing" asp-controller="Acount" method="post" style="margin-top: 230px;">
    <div asp-validation-summary="All"></div>
    <div class="container text-center">
            <div class="form-group">
                <label style="width: 100px; left:500px;">Login:</label>
                <input type="text" style="width: 250px; left:390px" maxlength="30" required />
            </div>
        
            <div class="form-group">
                <label style="width: 100px; left:500px;" name="password">Password:</label>
                <input type="password" style="width: 250px; left:390px" name="password" required maxlength="30" />
            </div>
            <button class="btn btn-primary" style="width:200px; left:390px;" type="submit">Log in</button>
    </div>
</form>